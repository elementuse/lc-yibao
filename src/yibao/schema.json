{
    "$schema": "http://json-schema.org/schema",
    "id": "lc-yibao",
    "title": "yibao",
    "type": "object",
    "properties": {
      "project": {
        "type": "string",
        "description": "The name of the project.",
        "$default": {
          "$source": "projectName"
        }
      },
      "channel": {
        "type": "string",
        "description": "The name of the channel",
        "$default": {
            "$source": "argv",
            "index": 0
          },
        "x-prompt": "What is your channel's name?"
      }
    },
    "required": [
        "channel"
    ],
    "additionalProperties": false
  }